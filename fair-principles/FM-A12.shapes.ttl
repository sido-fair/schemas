# FAIRMetrics
# searches the metadata for the Dublin Core 'accessRights' property

PREFIX sh: <http://www.w3.org/ns/shacl#>
PREFIX void: <http://rdfs.org/ns/void#>
PREFIX rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#>
PREFIX rdfs: <http://www.w3.org/2000/01/rdf-schema#>
PREFIX owl: <http://www.w3.org/2002/07/owl#>
PREFIX xsd: <http://www.w3.org/2001/XMLSchema#>
PREFIX dcterms: <http://purl.org/dc/terms/>
PREFIX foaf: <http://xmlns.com/foaf/0.1/>
PREFIX wv: <http://vocab.org/waiver/terms/norms>
PREFIX sd: <http://www.w3.org/ns/sparql-service-description#>
PREFIX dcterms: <http://purl.org/dc/terms/>
PREFIX schema: <http://schema.org/>

PREFIX sido: <https://w3id.org/def/sido-fair#>

sido:FAIR_A12_Shape a sh:NodeShape ;
    sh:targetClass void:Dataset ;
    sh:message "A1.2: Het standaard communicatieprotocol voorziet in authenticatie- en authorizatieprocedures, waar nodig"@nl ;
    sh:message "A1.2: The standardized communication protocol allows for an authentication and authorization procedure, where necessary"@en ;
    sh:property [
        sh:path dcterms:accessRights ;
        sh:minCount 1 ;
    ]
    .
